			<div class="media">
				{% set image = featuredContent.featuredImage.first() %}
				{% if image %}
		          <figure><img src="{{ image.getUrl('squareh') }}" alt="{{ entry.title }}"/></figure>
		          {% endif %}

			</div>
			<div class="content">
			    <h2>{{ featuredContent.title }}</h2>
